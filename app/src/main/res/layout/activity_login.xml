<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <TextView
        android:id="@+id/login_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/id_text"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/id_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/login_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/input_id"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:id="@+id/input_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/id_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ps_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="아이디를 입력해주세요."
        />
    <TextView
        android:id="@+id/ps_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/input_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/input_ps"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:id="@+id/input_ps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ps_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_groups"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="비밀번호를 입력해주세요."
        />

    <View
        android:id="@+id/btn_groups"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_ps"
        app:layout_constraintBottom_toTopOf="@id/google_sns_login_btn"
        />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="로그인"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@id/btn_groups"
        app:layout_constraintLeft_toLeftOf="@id/btn_groups"
        app:layout_constraintRight_toLeftOf="@id/signUp_btn"
        app:layout_constraintBottom_toTopOf="@id/find_id_btn"
        />
    <Button
        android:id="@+id/signUp_btn"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="회원가입"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@id/btn_groups"
        app:layout_constraintLeft_toRightOf="@id/login_btn"
        app:layout_constraintRight_toRightOf="@id/btn_groups"
        app:layout_constraintBottom_toTopOf="@id/find_ps_btn"
        />
    <Button
        android:id="@+id/find_id_btn"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="아이디\n찾기"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        app:layout_constraintLeft_toLeftOf="@id/btn_groups"
        app:layout_constraintRight_toLeftOf="@id/find_ps_btn"
        app:layout_constraintBottom_toBottomOf="@id/btn_groups"
        />
    <Button
        android:id="@+id/find_ps_btn"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="비밀번호\n찾기"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/signUp_btn"
        app:layout_constraintLeft_toRightOf="@id/find_id_btn"
        app:layout_constraintRight_toRightOf="@id/btn_groups"
        app:layout_constraintBottom_toBottomOf="@id/btn_groups"
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_sns_login_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/btn_groups"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/btn_google_signin_light_normal_web"
        />
    <Button
        android:id="@+id/google_sns_logout_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="구글 로그아웃 테스트"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/google_sns_login_btn"
        />





</androidx.constraintlayout.widget.ConstraintLayout>