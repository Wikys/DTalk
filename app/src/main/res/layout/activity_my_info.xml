<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my_info">
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="내 정보"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/id_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="아이디"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/my_id"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="내 아이디"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/id_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        />
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/my_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/phone_number_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="전화번호"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/my_phone_number"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="000-0000-0000"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/phone_number_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        />
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/my_phone_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/nick_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="닉네임"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/my_nick"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="닉네임"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/nick_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>