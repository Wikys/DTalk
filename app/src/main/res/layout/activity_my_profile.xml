<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my_profile">
    <ImageButton
        android:id="@+id/edit_profile_background_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background=""
        android:src="@drawable/image_icon"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        />
    <ImageButton
        android:id="@+id/exit_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background=""
        android:src="@drawable/x_icon"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        />
    <View
        android:id="@+id/profile"
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"
        />
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/person_icon"
        app:layout_constraintTop_toTopOf="@id/profile"
        app:layout_constraintLeft_toLeftOf="@id/profile"
        app:layout_constraintRight_toRightOf="@id/profile"
        app:layout_constraintBottom_toTopOf="@id/profile_nick"
        app:layout_constraintVertical_weight="3"
        />
    <TextView
        android:id="@+id/profile_nick"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="닉네임"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintLeft_toLeftOf="@id/profile"
        app:layout_constraintRight_toRightOf="@id/profile"
        app:layout_constraintBottom_toTopOf="@+id/status_message"
        app:layout_constraintVertical_weight="1"
        />
    <TextView
        android:id="@+id/status_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="상태 메세지"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/profile_nick"
        app:layout_constraintLeft_toLeftOf="@id/profile"
        app:layout_constraintRight_toRightOf="@id/profile"
        app:layout_constraintBottom_toBottomOf="@id/profile"
        app:layout_constraintVertical_weight="1.5"
        />
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_menu"
        />
    <View
        android:id="@+id/bottom_menu"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/chat_with_me_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/bottom_menu"
        app:layout_constraintLeft_toLeftOf="@id/bottom_menu"
        app:layout_constraintRight_toLeftOf=""
        app:layout_constraintBottom_toBottomOf="@id/bottom_menu"
        android:clickable="true"
        />
    <ImageView
        android:id="@+id/chat_with_me_img"
        android:layout_width="0dp"
        android:layout_height="0dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>