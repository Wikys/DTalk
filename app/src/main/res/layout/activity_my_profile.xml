<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my_profile">
    <ImageButton
        android:id="@+id/edit_profile_background_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:src="@drawable/image_icon"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        />
    <ImageButton
        android:id="@+id/exit_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:src="@drawable/x_icon"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        />
    <View
        android:id="@+id/profile"
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"
        />
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/person_icon"
        app:layout_constraintTop_toTopOf="@id/profile"
        app:layout_constraintLeft_toLeftOf="@id/profile"
        app:layout_constraintRight_toRightOf="@id/profile"
        app:layout_constraintBottom_toTopOf="@id/profile_nick"
        app:layout_constraintVertical_weight="3"
        />
    <TextView
        android:id="@+id/profile_nick"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="닉네임"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintLeft_toLeftOf="@id/profile"
        app:layout_constraintRight_toRightOf="@id/profile"
        app:layout_constraintBottom_toTopOf="@+id/status_message"
        app:layout_constraintVertical_weight="1"
        />
    <TextView
        android:id="@+id/status_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="상태 메세지"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/profile_nick"
        app:layout_constraintLeft_toLeftOf="@id/profile"
        app:layout_constraintRight_toRightOf="@id/profile"
        app:layout_constraintBottom_toBottomOf="@id/profile"
        app:layout_constraintVertical_weight="1.5"
        />
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_menu"
        />
    <View
        android:id="@+id/bottom_menu"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/chat_with_me_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/bottom_menu"
        app:layout_constraintLeft_toLeftOf="@id/bottom_menu"
        app:layout_constraintRight_toLeftOf="@id/edit_profile_btn"
        app:layout_constraintBottom_toBottomOf="@id/bottom_menu"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        />
    <ImageView
        android:id="@+id/chat_with_me_img"
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/chat_with_me_btn"
        app:layout_constraintLeft_toLeftOf="@id/chat_with_me_btn"
        app:layout_constraintRight_toRightOf="@id/chat_with_me_btn"
        app:layout_constraintBottom_toTopOf="@+id/chat_with_me_Text"
        android:src="@drawable/speech_bubble_icon"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="20dp"
        /><!--말풍선 이미지-->
    <TextView
        android:id="@+id/chat_with_me_Text"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="나와의 채팅"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/chat_with_me_img"
        app:layout_constraintLeft_toLeftOf="@id/chat_with_me_btn"
        app:layout_constraintRight_toRightOf="@id/chat_with_me_btn"
        app:layout_constraintBottom_toBottomOf="@id/chat_with_me_btn"
        android:gravity="center"
        />

    <View
        android:id="@+id/edit_profile_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/bottom_menu"
        app:layout_constraintLeft_toRightOf="@id/chat_with_me_btn"
        app:layout_constraintRight_toRightOf="@id/bottom_menu"
        app:layout_constraintTop_toTopOf="@id/bottom_menu"
        app:layout_constraintVertical_bias="0.0"
        android:background="?attr/selectableItemBackground"/>

    <ImageView
        android:id="@+id/edit_profile_img"
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@+id/edit_profile_btn"
        app:layout_constraintLeft_toLeftOf="@id/edit_profile_btn"
        app:layout_constraintRight_toRightOf="@id/edit_profile_btn"
        app:layout_constraintBottom_toTopOf="@id/edit_profile_text"
        android:src="@drawable/pen_icon"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="20dp"
        /><!--말풍선 이미지-->
    <TextView
        android:id="@+id/edit_profile_text"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="프로필 편집"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_img"
        app:layout_constraintLeft_toLeftOf="@id/edit_profile_btn"
        app:layout_constraintRight_toRightOf="@id/edit_profile_btn"
        app:layout_constraintBottom_toBottomOf="@id/edit_profile_btn"
        android:gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>