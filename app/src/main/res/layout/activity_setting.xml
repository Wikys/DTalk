<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting">
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="설정"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/change_ps_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="비밀번호 변경"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:id="@+id/del_account_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="회원 탈퇴"
        app:layout_constraintTop_toBottomOf="@id/change_ps_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/block_list_manage_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="차단 목록 관리"
        app:layout_constraintTop_toBottomOf="@id/del_account_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/my_info"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="내 정보"
        app:layout_constraintTop_toBottomOf="@id/block_list_manage_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>