<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_profile">
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/person_icon"
        android:background="@drawable/input_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/input_nick"
        app:layout_constraintVertical_chainStyle="packed"
        android:scaleType="fitXY"
        android:layout_margin="20dp"
        android:clickable="true"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:src="@drawable/camera_icon"
        app:layout_constraintRight_toRightOf="@id/profile_image"
        app:layout_constraintBottom_toBottomOf="@id/profile_image"

        />
    <EditText
        android:id="@+id/input_nick"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="닉네임"
        android:background="@drawable/input_border"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/input_status_message"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/input_status_message"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="상태 메시지"
        android:layout_margin="20dp"
        android:background="@drawable/input_border"
        app:layout_constraintTop_toBottomOf="@id/input_nick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="변경"
        app:layout_constraintRight_toLeftOf="@id/cancel_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        />
    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="취소"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>